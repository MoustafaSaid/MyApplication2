<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/addNewShoeFragment"
        android:name="com.example.myapplication.AddNewShoeFragment"
        android:label="fragment_add_new_shoe"
        >
        <action
            android:id="@+id/action_addNewShoeFragment_to_shoeDetailsFragment"
            app:destination="@id/shoeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/instrucationsFragment"
        android:name="com.example.myapplication.InstrucationsFragment"
        android:label="fragment_instrucations"
         >
        <action
            android:id="@+id/action_instrucationsFragment_to_shoeDetailsFragment"
            app:destination="@id/shoeDetailsFragment"
             />
    </fragment>
    <fragment
        android:id="@+id/shoeDetailsFragment"
        android:name="com.example.myapplication.ShoeDetailsFragment"
        android:label="fragment_shoe_details"
         >
        <action
            android:id="@+id/action_shoeDetailsFragment_to_addNewShoeFragment"
            app:destination="@id/addNewShoeFragment"
           />
        <action
            android:id="@+id/action_shoeDetailsFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.myapplication.LoginFragment"
        android:label="fragment_login"
       >
        <action
            android:id="@+id/action_loginFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
             />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.myapplication.WelcomeFragment"
        android:label="fragment_welcome"
         >
        <action
            android:id="@+id/action_welcomeFragment_to_instrucationsFragment"
            app:destination="@id/instrucationsFragment"
             />
    </fragment>
</navigation>